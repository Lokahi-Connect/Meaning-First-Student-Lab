      { "type": "sentence_frame", "content": "<make> + <-ing> â†’ <making> because ________." }
    ]
  },

  "response": {
    "mode": "short_text",
    "fields": [
      { "id": "meaning", "label": "Meaning in context", "field_type": "text" },
      { "id": "structure", "label": "Structure", "field_type": "text" },
      { "id": "join", "label": "Join reasoning", "field_type": "text" }
    ]
  },

  "scoring": {
    "rubric": [
      { "criterion": "Meaning matches sentence use", "max_points": 2 },
