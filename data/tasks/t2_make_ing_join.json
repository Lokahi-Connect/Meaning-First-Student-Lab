{
  "id": "t2_make_ing_join",
  "task_type": "join_convention_check",
  "tier": 2,
  "difficulty": 4,
  "time_estimate_sec": 210,

  "context": {
    "sentence": "We are making a birthday card for Grandpa.",
    "target_word": "making",
    "gloss": "in the process of making (doing it now)"
  },

  "targets": {
    "base": "make",
    "suffixes": ["ing"],
    "words": ["making"],
    "join_conventions": ["final_e_drop_before_vowel_suffix"]
  },

  "prompts": {
    "stem": "Anchor meaning in the sentence. Then show structure. Then check the join.",
    "questions": [
      { "id": "q1", "text": "In this sentence, what does <making> mean?", "intent": "meaning" },
      { "id": "q2", "text": "How is <making> built (structure)?", "intent": "structure" },
      {
        "id": "q3",
        "text": "Check the join: compare <make> with <making>. What changed and why?",
        "intent": "join_convention"
      }
    ],
    "supports": [
      { "type": "sentence_frame", "content": "In this sentence, <making> means ________." },
      { "type": "sentence_frame", "content": "<make> + <-ing> → <making> because ________." }
    ]
  },

  "response": {
    "mode": "short_text",
    "fields": [
      { "id": "meaning", "label": "Meaning in the sentence", "field_type": "text" },
      { "id": "structure", "label": "Structure", "field_type": "text" },
      { "id": "join", "label": "Join explanation", "field_type": "text" }
    ]
  },

  "scoring": {
    "rubric": [
      { "criterion": "Meaning matches sentence use", "max_points": 2 },
      { "criterion": "Structure shows base + suffix", "max_points": 2 },
      { "criterion": "Join explanation identifies the final <e> change with evidence", "max_points": 3 }
    ],
    "error_tags": ["meaning_error", "structure_error", "join_error"],
    "mastery_threshold": 0.75
  },

  "metadata": {
    "tags": ["ing", "final_e", "join_convention", "tier2"],
    "notes_for_teacher": "Ask: ‘What is the base spelling in a related word?’"
  }
}
