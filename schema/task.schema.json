{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lokahiconnect.org/schema/task.schema.json",
  "title": "Meaning-First Student Lab Task",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "task_type",
    "tier",
    "context",
    "targets",
    "prompts",
    "response",
    "scoring"
  ],
  "properties": {
    "id": { "type": "string", "pattern": "^[a-z0-9_\\-]+$" },
    "task_type": {
      "type": "string",
      "enum": [
        "base_identification",
        "morpheme_segmentation",
        "matrix_build",
        "word_family_link",
        "join_convention_check",
        "grapheme_function_explain",
        "meaning_anchor",
        "transfer_apply"
      ]
    },
    "tier": { "type": "integer", "minimum": 1, "maximum": 6 },
    "difficulty": { "type": "integer", "minimum": 1, "maximum": 10 },
    "time_estimate_sec": { "type": "integer", "minimum": 30, "maximum": 900 },

    "context": {
      "type": "object",
      "additionalProperties": false,
      "required": ["sentences", "target_word", "gloss"],
      "properties": {
        "sentences": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 8 }
        },
        "target_word": { "type": "string", "minLength": 2 },
        "gloss": { "type": "string", "minLength": 3 },
        "audio": {
          "type": "object",
          "additionalProperties": false,
          "required": ["src"],
          "properties": {
            "src": { "type": "string", "minLength": 3 },
            "caption": { "type": "string" }
          }
        }
      }
    },

    "targets": {
      "type": "object",
      "additionalProperties": false,
      "required": ["base"],
      "properties": {
        "base": { "type": "string" },

        "prefixes": { "type": "array", "items": { "type": "string" } },
        "suffixes": { "type": "array", "items": { "type": "string" } },

        "words": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Matrix-buildable words that preserve the base spelling (same orthographic base)."
        },

        "join_conventions": { "type": "array", "items": { "type": "string" } },

        "family_relatives": {
          "type": "array",
          "description": "Related words that belong in the meaning family but are NOT necessarily matrix-buildable with the same base spelling.",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["word", "relation_note"],
            "properties": {
              "word": { "type": "string" },
              "relation_note": { "type": "string" }
            }
          }
        },

        "twin_bases": {
          "type": "array",
          "description": "Alternate base spellings that represent the same core meaning (explicitly labeled as twin bases).",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["base", "example_words", "note"],
            "properties": {
              "base": { "type": "string" },
              "example_words": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
              "note": { "type": "string" }
            }
          }
        }
      }
    },

    "prompts": {
      "type": "object",
      "additionalProperties": false,
      "required": ["stem", "questions"],
      "properties": {
        "stem": { "type": "string" },
        "questions": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "text", "intent"],
            "properties": {
              "id": { "type": "string" },
              "text": { "type": "string" },
              "intent": {
                "type": "string",
                "enum": [
                  "meaning",
                  "structure",
                  "family",
                  "grapheme_function",
                  "join_convention",
                  "transfer"
                ]
              }
            }
          }
        },
        "supports": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "content"],
            "properties": {
              "type": { "type": "string", "enum": ["sentence_frame", "hint", "example", "definition"] },
              "content": { "type": "string" }
            }
          }
        }
      }
    },

    "response": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode"],
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "multiple_choice",
            "drag_drop",
            "short_text",
            "matrix_builder",
            "select_evidence"
          ]
        },
        "fields": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "label", "field_type"],
            "properties": {
              "id": { "type": "string" },
              "label": { "type": "string" },
              "field_type": {
                "type": "string",
                "enum": ["text", "choice", "morpheme_chip", "word_chip", "matrix_cell", "evidence_pick"]
              },
              "options": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      }
    },

    "scoring": {
      "type": "object",
      "additionalProperties": false,
      "required": ["rubric", "error_tags"],
      "properties": {
        "rubric": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["criterion", "max_points"],
            "properties": {
              "criterion": { "type": "string" },
              "max_points": { "type": "integer", "minimum": 1, "maximum": 5 }
            }
          }
        },
        "error_tags": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["meaning_error", "structure_error", "family_error", "join_error", "grapheme_language_error"]
          }
        },
        "mastery_threshold": { "type": "number", "minimum": 0.5, "maximum": 1.0 }
      }
    },

    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tags": { "type": "array", "items": { "type": "string" } },
        "notes_for_teacher": { "type": "string" }
      }
    }
  }
}
